<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.se9project.se_9_project.login_page"

    android:weightSum="1"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_weight="0.31"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/b1"
            android:id="@+id/imageView"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:layout_weight="2.50" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="12dp"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="41dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="367dp"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:text="Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="0.41"
                android:textStyle="normal|bold"
                android:textSize="14sp" />

            <EditText
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/edtHour"
                android:maxLength="2"
                android:numeric="integer"
                android:hint="Hour"
                android:layout_weight="0.05" />

            <TextView
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_weight="0.00"
                android:textStyle="normal|bold" />

            <EditText
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/edtMin"
                android:maxLength="2"
                android:numeric="integer"
                android:hint="Min"
                android:layout_weight="0.04" />

            <Button
                android:text="check"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:id="@+id/checkbut"
                android:layout_weight="0.04" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="14dp"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="0.35"
                android:textStyle="normal|bold"
                android:textSize="14sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtBusNo"
                android:layout_weight="1.41"
                android:hint="Bus No." />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="16dp"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="36dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:layout_weight="0.49">

            </RelativeLayout>

            <Button
                android:text="OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnOk"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_light"
                android:background="@android:color/black" />

            <RelativeLayout
                android:layout_width="15dp"
                android:layout_height="match_parent">

            </RelativeLayout>

            <Button
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCancel"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_light"
                android:background="@android:color/black" />

            <RelativeLayout
                android:layout_width="47dp"
                android:layout_height="match_parent"
                android:layout_weight="0.89">

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_weight="0.04" />

    <Button
        android:text="Time Table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timetb"
        android:layout_weight="0.05"
        android:background="@android:color/holo_green_light"
        android:textSize="@dimen/activity_horizontal_margin" />

</LinearLayout>

